<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/fo_white">

    <LinearLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:src="?attr/fo_empty_drawable"
            tools:src="@drawable/fo_def_empty_light" />

        <TextView
            android:id="@+id/tv_empty_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="@string/fo_empty_data_text"
            android:textColor="@color/fo_empty_color"
            android:textSize="14sp" />

        <com.follow.order.widget.shape.RoundTextView
            android:id="@+id/btn_empty_retry"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="@string/fo_empty_button_retry"
            android:textColor="@color/fo_white"
            android:textSize="12sp"
            android:visibility="gone"
            app:rv_backgroundColor="@color/fo_blue"
            app:rv_cornerRadius="2dp" />

        <View
            android:id="@+id/empty_temp_view"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>