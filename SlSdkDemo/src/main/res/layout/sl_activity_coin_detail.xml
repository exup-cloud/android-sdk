<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <android.support.design.widget.AppBarLayout
        android:background="@color/bg_card_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:background="@color/bg_card_color"
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="top"
            app:expandedTitleMarginTop="70dp"
            app:expandedTitleMarginStart="@dimen/dp_15"
            app:expandedTitleTextAppearance="@dimen/sp_28"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:subtitleTextAppearance="@dimen/sp_14"
            app:titleEnabled="true"
            app:title="USDT"
            app:titleTextColor="@color/text_color">

            <LinearLayout
                android:layout_marginTop="120dp"
                app:layout_collapseParallaxMultiplier="0.7"
                app:layout_collapseMode="parallax"
                android:orientation="vertical"
                android:background="@color/bg_card_color"
                android:id="@+id/header_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_account_equity_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contract_assets_account_equity"
                            android:textColor="@color/normal_text_color"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_marginTop="7dp"
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/sp_14"
                            tools:text="123123" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_available_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sl_str_wallet_balance"
                            android:textColor="@color/normal_text_color"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_marginTop="7dp"
                            android:id="@+id/tv_available_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/sp_14"
                            tools:text="123123" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_margin_balance_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sl_str_margin_balance"
                            android:textColor="@color/normal_text_color"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_marginTop="7dp"
                            android:id="@+id/tv_margin_balance_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/sp_14"
                            tools:text="123123" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_floating_gains_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sl_tv_floating_gains"
                            android:textColor="@color/normal_text_color"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_marginTop="7dp"
                            android:id="@+id/tv_floating_gains_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/sp_14"
                            tools:text="123123" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_positions_margin_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contract_text_positionMargin"
                            android:textColor="@color/normal_text_color"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_marginTop="7dp"
                            android:id="@+id/tv_positions_margin_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/sp_14"
                            tools:text="123123" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_entrust_margin_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contract_text_orderMargin"
                            android:textColor="@color/normal_text_color"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_marginTop="7dp"
                            android:id="@+id/tv_entrust_margin_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/sp_14"
                            tools:text="123123" />

                    </LinearLayout>

                </LinearLayout>




                <View
                    android:background="@color/bg_color"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
            </LinearLayout>
            <android.support.v7.widget.Toolbar
                android:gravity="center_vertical"
                android:id="@+id/toolbar"
                android:background="@color/bg_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/return_daytime"
                app:titleTextColor="@color/text_color" />
        </android.support.design.widget.CollapsingToolbarLayout>

       <TextView
           android:id="@+id/tv_coin_title"
           android:textColor="@color/text_color"
           android:textSize="16sp"
           android:textStyle="bold"
           android:paddingBottom="@dimen/dp_15"
           android:paddingTop="@dimen/dp_15"
           android:paddingLeft="@dimen/dp_15"
           android:background="@color/bg_card_color"
           android:text="USDT持仓"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </android.support.design.widget.AppBarLayout>


    <FrameLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</android.support.design.widget.CoordinatorLayout>

