<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sl_bg_contract_share_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_share_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:scaleType="centerCrop"
        android:src="@drawable/sl_share_header_big_bg" />

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:text="--"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        tools:text="小赚一笔！" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/sl_str_profit_rate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sl_str_profit_rate1"
                android:textColor="@color/normal_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/sl_border_green_fill2"
                android:paddingLeft="@dimen/dp_4"
                android:paddingTop="2dp"
                android:paddingRight="@dimen/dp_4"
                android:paddingBottom="2dp"
                android:text="做多"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_earned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4px"
            android:text="+0.00%"
            android:textColor="@color/main_green"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_earned"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="1dp"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="1dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_contract_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sl_str_swap"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_contract_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="--"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="BTCUSDT" />
        </LinearLayout>

        <View
            android:layout_weight="0"
            android:background="@color/normal_icon_color"
            android:layout_width="1px"
            android:layout_height="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_latest_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sl_str_fair_price"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_latest_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="--"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="5249.00" />
        </LinearLayout>
        <View
            android:layout_weight="0"
            android:background="@color/normal_icon_color"
            android:layout_width="1px"
            android:layout_height="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_open_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sl_str_cost_price"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_open_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="--"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="5230.00" />
        </LinearLayout>
    </LinearLayout>


    <!--底部二维码-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="89dp"
            android:layout_height="89dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15">

            <ImageView
                android:id="@+id/iv_app_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/iv_app_icon"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_down_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_app_icon"
                    android:layout_marginTop="2dp"
                    android:text="@string/sl_str_platform_des"
                    android:textColor="@color/text_color"
                    android:textSize="10sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_app_icon"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/sl_bg_share_scan_code"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tv_scan_down_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sl_str_scan_down_app"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/sl_contract_share_arrow" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>

