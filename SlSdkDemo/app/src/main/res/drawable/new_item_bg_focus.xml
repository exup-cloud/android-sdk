<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <corners android:radius="@dimen/dp_2"/>
            <solid android:color="@color/main_color" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">

        <!-- 边框里面背景颜色 -->
        <shape>
            <corners android:radius="@dimen/dp_2"/>
            <solid android:color="#0C1A3C" />
        </shape>
    </item>

</layer-list>

