<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_card_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/personal_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout">

        <FrameLayout
            android:id="@+id/rl_header_layout"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/iv_header_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bg_otc_header"
                android:textColor="@color/bg_card_color"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_header"
                android:layout_gravity="bottom|right"
                android:src="@drawable/bg_login_cri" />
        </FrameLayout>


        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_toRightOf="@+id/rl_header_layout"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            tools:text="xixixii" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_header_view"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_transaction_number_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otc_text_merchantTradeNumber"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_transaction_number_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                tools:text="49494" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_complain_num_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otc_text_merchantAppealNumber"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_complain_num_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                tools:text="494" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_suc_complain_num_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otc_text_merchantAppealWin"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_suc_complain_num_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                tools:text="49494" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_otc_xinyong_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otc_xinyong"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_otc_xinyong_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                tools:text="49494" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_merchantPhoneAuth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:text="@string/otc_text_merchantPhoneAuth"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/iv_phone_status"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:src="@drawable/fiat_complete" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_identify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:text="@string/common_text_identify"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/iv_identity_certificate_status"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/fiat_complete" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>