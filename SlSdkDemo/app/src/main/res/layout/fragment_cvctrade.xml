<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/bg_color"
    android:orientation="vertical">


    <!--Header-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/ll_coin_map"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/page_head_height"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/img_coin_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:layout_gravity="left"
                android:paddingBottom="@dimen/dp_15"
                android:src="@drawable/exchange_sidepull" />

            <TextView
                android:id="@+id/tv_coin_map"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_18"
                android:paddingLeft="@dimen/dp_15"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/img_coin_map"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="BTC/USDT" />
            <com.yjkj.chainup.new_version.view.CustomTagView
                android:id="@+id/ctv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/tv_clean_tag"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@drawable/ic_tips"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="center_vertical"
            app:layout_constraintLeft_toRightOf="@id/ll_coin_map"
            app:layout_constraintTop_toTopOf="@id/ll_coin_map"
            app:layout_constraintBottom_toBottomOf="@id/ll_coin_map"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="@dimen/page_head_height"
            android:layout_height="@dimen/page_head_height"
            android:src="@drawable/margin_more"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="@id/ll_coin_map"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ll_coin_map"
            android:paddingTop="@dimen/dp_20"/>

        <!--KLIne-->
        <ImageView
            android:id="@+id/ib_kline"
            android:layout_width="@dimen/page_head_height"
            android:layout_height="@dimen/page_head_height"
            android:background="@color/transparent"
            android:padding="@dimen/dp_15"
            android:src="@drawable/exchange_klinediagram"
            app:layout_constraintBottom_toBottomOf="@id/ll_coin_map"
            app:layout_constraintRight_toLeftOf="@id/iv_more"
            app:layout_constraintTop_toTopOf="@id/ll_coin_map" />
        <!--买&卖-->

        <RelativeLayout
            android:id="@+id/rg_buy_sell"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_coin_map">

            <TextView
                android:id="@+id/rb_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/contract_action_buy"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_buy_bg"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_3"
                android:layout_below="@+id/rb_buy"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="5dp"
                android:background="@color/main_green" />


            <TextView
                android:id="@+id/rb_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/rb_buy"
                android:text="@string/contract_action_sell"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_16" />


            <View
                android:id="@+id/view_sell_bg"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_3"
                android:layout_below="@+id/rb_sell"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/rb_buy"
                android:background="@color/main_red"
                android:visibility="visible" />

            <TextView
                android:id="@+id/rb_unlock_the_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/rb_sell"
                android:text="@string/transaction_text_unlockDeal"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />


            <View
                android:id="@+id/view_unlock_the_deal_bg"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_3"
                android:layout_below="@+id/rb_sell"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/rb_sell"
                android:background="@color/main_red"
                android:visibility="gone" />

        </RelativeLayout>


        <!--最新成交价-->
        <TextView
            android:id="@+id/tv_close_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingTop="4dp"
            android:paddingRight="@dimen/dp_15"
            android:text="--"
            android:textColor="@color/main_green"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ib_kline"
            tools:text="42.9009" />
        <!--换算价-->
        <TextView
            android:id="@+id/tv_converted_close_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/dp_15"
            android:text="--"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_close_price"
            tools:text="¥62.99" />
    </android.support.constraint.ConstraintLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.yjkj.chainup.new_version.view.depth.NHorizontalDepthLayout
                android:id="@+id/v_horizontal_depth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.yjkj.chainup.new_version.view.depth.NVerticalDepthLayout
                android:id="@+id/v_vertical_depth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <include
                android:id="@+id/item_unlock_the_deal_view"
                layout="@layout/item_unlock_the_deal_view"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/bg_color"
                />
            <!--当前委托部分-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_card_color"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="@string/contract_text_currentEntrust"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/ll_all_entrust_order"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/dp_15"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_13"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_1"
                            android:src="@drawable/exchange_order"

                            />

                        <TextView
                            android:id="@+id/tv_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/common_action_sendall"
                            android:textColor="@color/normal_text_color"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_current_entrust"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_card_color"
                    android:minHeight="@dimen/dp_150"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
