<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/ll_payment_type_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_payment_imageview"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_payment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/enter" />

        <TextView
            android:id="@+id/tv_switching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/iv_next"
            android:text="@string/noun_order_paymentTerm" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:background="@color/line_color" />
    <!--名字-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_13">

        <TextView
            android:id="@+id/tv_firstaname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/firstname"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_firstaname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_12"
            android:gravity="right|center_vertical"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            tools:text="招商银行北京分行" />
    </LinearLayout>
    <!--账号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_13">

        <TextView
            android:id="@+id/tv_user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/firstname"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_user_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_12"
            android:gravity="right|center_vertical"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            tools:text="招商银行北京分行" />

        <ImageView
            android:id="@+id/tv_user_copy"
            android:layout_width="11dp"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:src="@drawable/fiat_copy"
            android:visibility="gone" />
    </LinearLayout>
    <!--账号o-->
    <LinearLayout
        android:id="@+id/account_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_13"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_payment_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otc_text_wxID"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_payment_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_12"
            android:gravity="right|center_vertical"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            tools:text="招商银行北京分行" />

        <ImageView
            android:id="@+id/tv_payment_account_copy"
            android:layout_width="11dp"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:src="@drawable/fiat_copy"
            android:visibility="gone" />
    </LinearLayout>

    <!--付款码-->
    <LinearLayout
        android:id="@+id/peyment_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_13"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_payment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="@string/journalAccount_text_amount" />

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_12"
            android:gravity="right|center_vertical"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            tools:text="招商银行北京分行" />

        <ImageView
            android:id="@+id/tv_payment_copy"
            android:layout_width="11dp"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:src="@drawable/fiat_copy" />

    </LinearLayout>
    <!--支付时间-->
    <LinearLayout
        android:id="@+id/pey_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_13"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_pay_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otc_text_payTime"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_pay_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_12"
            android:gravity="right|center_vertical"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            tools:text="招商银行北京分行" />

        <ImageView
            android:id="@+id/tv_pay_time_copy"
            android:layout_width="11dp"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:src="@drawable/fiat_copy"
            android:visibility="gone" />

    </LinearLayout>
    <!--放币时间-->
    <LinearLayout
        android:id="@+id/put_coin_code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_13"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_put_coin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otc_text_sendCoinTime"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_put_coin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_12"
            android:gravity="right|center_vertical"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            tools:text="招商银行北京分行" />

        <ImageView
            android:id="@+id/tv_put_coin_copy"
            android:layout_width="11dp"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:src="@drawable/fiat_copy"
            android:visibility="gone" />

    </LinearLayout>


    <TextView
        android:id="@+id/pay_attention_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="7dp"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="@string/otc_tip_buyerConfirmPaid"
        android:textColor="@color/certification_color"
        android:textSize="@dimen/sp_12" />


</LinearLayout>