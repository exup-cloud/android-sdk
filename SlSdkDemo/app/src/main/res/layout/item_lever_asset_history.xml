<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_lever_symbol_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/leverage_coinMap"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12" />

    <com.yjkj.chainup.new_version.view.PwdSettingView
        android:id="@+id/psv_lever_symbol"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/tv_currency_title"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        app:hint_text="@string/common_action_sendall"
        app:icon_res2="@drawable/enter"
        app:isEditable="false"
        app:isPwdShow="false"
        app:textContent="@string/common_action_sendall" />


    <TextView
        android:id="@+id/tv_title_lever_history_type"
        style="@style/ScreeningPopup"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/filter_fold_journalType"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <com.yjkj.chainup.new_version.view.LabelRadioButton
            android:id="@+id/rb_lever_current_loan"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="-5dp"
            android:singleLine="true"
            android:text="@string/leverage_current_borrow"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            app:label_backgroundColor="@color/main_blue"
            app:label_distance="0dp"
            app:label_height="16dp"
            app:label_orientation="RIGHT_TOP"
            app:label_strokeColor="@color/main_blue"
            app:label_text=""
            app:label_textSize="10sp"
            app:label_textStyle="BOLD_ITALIC"
            app:label_visual="true" />

        <com.yjkj.chainup.new_version.view.LabelRadioButton
            android:id="@+id/rb_lever_apply_for_loan"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginRight="@dimen/dp_23"
            android:layout_weight="1"
            android:background="@color/tabbar_color"
            android:button="@null"
            android:checked="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="-5dp"
            android:singleLine="true"
            android:text="@string/leverage_history_borrow"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_14"
            app:label_backgroundColor="@color/main_blue"
            app:label_distance="0dp"
            app:label_height="16dp"
            app:label_orientation="RIGHT_TOP"
            app:label_strokeColor="@color/main_blue"
            app:label_text=""
            app:label_textSize="10sp"
            app:label_textStyle="BOLD_ITALIC"
            app:label_visual="false" />

        <com.yjkj.chainup.new_version.view.LabelRadioButton
            android:id="@+id/rb_lever_return_the_borrowing"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_weight="1"
            android:background="@color/tabbar_color"
            android:button="@null"
            android:checked="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="-5dp"
            android:singleLine="true"
            android:text="@string/transfer_text_record"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_14"
            app:label_backgroundColor="@color/main_blue"
            app:label_distance="0dp"
            app:label_height="16dp"
            app:label_orientation="RIGHT_TOP"
            app:label_strokeColor="@color/main_blue"
            app:label_text=""
            app:label_textSize="10sp"
            app:label_textStyle="BOLD_ITALIC"
            app:label_visual="false" />
    </LinearLayout>

</LinearLayout>