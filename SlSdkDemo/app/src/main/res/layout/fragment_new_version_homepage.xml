<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/ns_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.youth.banner.Banner
                    android:id="@+id/banner_looper"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:indicator_drawable_selected="@drawable/bg_homepage_select"
                    app:indicator_drawable_unselected="@drawable/bg_homepage_unselect"
                    app:indicator_height="2dp"
                    app:indicator_margin="2dp"
                    app:indicator_width="14dp" />


            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_top_24"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/bg_card_color" />

            <View
                android:id="@+id/v_top_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/bg_color" />

            <LinearLayout
                android:id="@+id/ll_advertising_layout"
                android:layout_width="match_parent"
                android:layout_height="39.5dp"
                android:background="@color/bg_card_color"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_advertising"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@drawable/home_announcement" />

                <com.yjkj.chainup.wedegit.VerticalTextview4ChainUp
                    android:id="@+id/vtc_advertising"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>


            <View style="@style/common_horizon_line_style" />

            <RelativeLayout
                android:id="@+id/recycler_center_service_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_center_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_card_color" />

                <LinearLayout
                    android:id="@+id/rl_controller"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_frist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_bg_4_homepage_select" />

                    <ImageView
                        android:id="@+id/iv_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_bg_4_homepage_unselect" />


                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view_login_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/bg_color" />

            <include
                android:id="@+id/ic_unlogin_layout"
                layout="@layout/item_new_version_homepage_unlogin"
                android:visibility="gone" />

            <include
                android:id="@+id/ic_login_layout"
                layout="@layout/item_home_page_asset_view"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/rl_custom_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_card_color"
                android:visibility="gone">

                <com.youth.banner.Banner
                    android:id="@+id/banner_looper_custom"
                    android:layout_width="345dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="@drawable/item_japan_banner_bg"
                    app:banner_default_image="@drawable/banner_japan"
                    app:indicator_height="1dp"
                    app:indicator_margin="0dp"
                    app:indicator_width="20dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/bg_color" />

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/stl_homepage_list"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@color/bg_card_color"
                style="@style/ToolbarType_bar_home_tab"
                 />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_half"
                android:background="@color/line_color" />

            <com.yjkj.chainup.wedegit.WrapContentViewPager
                android:id="@+id/fragment_market"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_card_color"
                android:overScrollMode="never" />
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/rl_top_layout_new"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:alpha="0"
        android:background="@color/bg_color" />

    <ImageView
        android:id="@+id/iv_market_logo"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        tools:src="@drawable/ic_top_logo" />

    <ImageView
        android:id="@+id/iv_personal_logo"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="3dp"
        android:padding="@dimen/dp_12"
        android:src="@drawable/home_personal" />

    <FrameLayout
        android:id="@+id/rl_red_envelope_entranc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_50">


        <ImageView
            android:id="@+id/rl_red_envelope_entrance"
            android:layout_width="50dp"
            android:layout_height="62.5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@drawable/redenvelope" />

        <ImageView
            android:id="@+id/iv_close_red_envelope"
            android:layout_width="21.33dp"
            android:layout_height="22.67dp"
            android:layout_gravity="right"
            android:src="@drawable/delete" />
    </FrameLayout>

</RelativeLayout>