<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/root_ll">

    <RelativeLayout
        android:id="@+id/ll_item_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_24h_title"
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="@dimen/dp_6"
            android:gravity="center_vertical|right"
            android:text="@string/common_text_priceLimit"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/tv_24h_title"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="@dimen/dp_6">
            <TextView
                android:id="@+id/tv_home_action_coinNameTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:layout_weight="6.0"
                android:gravity="center_vertical|left"
                android:text="@string/home_action_coinNameTitle"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/sp_12"
                android:maxLines="1"/>


            <TextView
                android:id="@+id/tv_new_price_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5.0"
                android:text="@string/home_text_dealLatestPrice"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/sp_12"
                android:maxLines="1"/>
        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_market_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never" />

</LinearLayout>
