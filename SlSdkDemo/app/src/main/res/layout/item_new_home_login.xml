<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_card_color">

    <RelativeLayout
        android:id="@+id/rl_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/page_head_height">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/home_text_assets"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_hide_asset"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:padding="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/visible"/>
    </RelativeLayout>

    <View
        style="@style/common_horizon_line_style"
        android:id="@+id/v_line"
        android:layout_below="@+id/rl_top_layout"/>
    <!--币币账户-->
    <RelativeLayout
        android:id="@+id/ll_bb_layout"
        android:layout_width="187dp"
        android:layout_height="91dp"
        android:layout_below="@+id/v_line"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_bibi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_14"
            android:text="@string/assets_text_exchange"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/tv_bibi"
            android:src="@drawable/enter" />

        <TextView
            android:id="@+id/tv_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bibi"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            tools:text="3.14000000000000000"
            android:maxLength="18"/>

        <TextView
            android:id="@+id/tv_asset_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bibi"
            android:layout_alignTop="@id/tv_asset"
            android:layout_alignBottom="@id/tv_asset"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_toRightOf="@+id/tv_asset"
            android:gravity="center"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="BTC" />

        <TextView
            android:id="@+id/tv_flat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_asset"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="$88"
            android:maxLength="18"/>

    </RelativeLayout>

    <View
        android:id="@+id/v_bibi_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_below="@+id/ll_bb_layout"
        android:background="@color/line_color" />

    <!--场外账户-->
    <RelativeLayout
        android:id="@+id/ll_otc_layout"
        android:layout_width="187dp"
        android:layout_height="91dp"
        android:layout_below="@+id/v_line"
        android:layout_marginRight="@dimen/dp_half"
        android:layout_toRightOf="@+id/ll_bb_layout"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_otc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_14"
            android:text="@string/assets_text_otc"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/tv_otc"
            android:src="@drawable/enter" />

        <TextView
            android:id="@+id/tv_otc_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_otc"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            tools:text="3.1415"
            android:maxLength="18"/>

        <TextView
            android:id="@+id/tv_otc_asset_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_otc"
            android:layout_alignTop="@id/tv_otc_asset"
            android:layout_alignBottom="@id/tv_otc_asset"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_toRightOf="@+id/tv_otc_asset"
            android:gravity="center"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="USDT" />

        <TextView
            android:id="@+id/tv_otc_flat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_otc_asset"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="bggg66"
            android:maxLength="18"/>
    </RelativeLayout>

    <!--合约-->
    <RelativeLayout
        android:id="@+id/ll_contract_layout"
        android:layout_width="187dp"
        android:layout_height="91dp"
        android:layout_below="@+id/ll_bb_layout"
        android:layout_marginTop="@dimen/dp_half"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_14"
            android:text="@string/assets_text_contract"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/tv_contract"
            android:src="@drawable/enter" />

        <TextView
            android:id="@+id/tv_contract_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_contract"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold|normal"
            tools:text="3.1415926"
            android:maxLength="18"/>

        <TextView
            android:id="@+id/tv_contract_asset_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_contract"
            android:layout_alignTop="@id/tv_contract_asset"
            android:layout_alignBottom="@id/tv_contract_asset"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_toRightOf="@+id/tv_contract_asset"
            android:gravity="center"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="BTC" />

        <TextView
            android:id="@+id/tv_contract_flat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_contract_asset"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="333"
            android:maxLength="18"/>
    </RelativeLayout>


    <!--杠杆-->
    <RelativeLayout
        android:id="@+id/ll_lever_layout"
        android:layout_width="187dp"
        android:layout_height="91dp"
        android:layout_below="@+id/ll_otc_layout"
        android:layout_toRightOf="@+id/ll_contract_layout"
        android:layout_marginTop="@dimen/dp_half"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_lever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_14"
            android:text="@string/leverage_asset"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/tv_lever"
            android:src="@drawable/enter" />

        <TextView
            android:id="@+id/tv_lever_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lever"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold|normal"
            tools:text="3.1415926"
            android:maxLength="18"/>

        <TextView
            android:id="@+id/tv_lever_asset_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lever"
            android:layout_alignTop="@id/tv_lever_asset"
            android:layout_alignBottom="@id/tv_lever_asset"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_toRightOf="@+id/tv_lever_asset"
            android:gravity="center"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="BTC" />

        <TextView
            android:id="@+id/tv_lever_flat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lever_asset"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="333"
            android:maxLength="18"/>
    </RelativeLayout>

    <View
        android:id="@+id/v_line_asset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_below="@+id/ll_contract_layout"
        android:background="@color/line_color" />

    <View
        android:layout_width="@dimen/dp_half"
        android:layout_height="match_parent"
        android:layout_above="@+id/v_line_asset"
        android:layout_below="@+id/v_line"
        android:layout_toRightOf="@+id/ll_bb_layout"
        android:background="@color/line_color" />





</RelativeLayout>