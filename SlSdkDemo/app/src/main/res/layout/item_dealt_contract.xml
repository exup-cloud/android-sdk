<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_15"
    >

    <ImageView
        android:id="@+id/iv_price_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/tv_coin_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_font_color"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/iv_price_type"
        tools:text="BTCBCH"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/tv_coin_map"
        tools:text="2019-12-15 22:00:02" />

    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_25"
        android:textColor="@color/main_font_color"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="ID:172" />

    <LinearLayout
        android:id="@+id/ll_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_25"
        app:layout_constraintTop_toBottomOf="@id/tv_coin_map">

        <com.yjkj.chainup.treaty.ComTitleValueView
            android:id="@+id/cvv_volume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomValue="100.00000000000"
            app:isShowTips="false"
            app:topGravity="4"
            app:bottomGravity="4"
            app:topTitle="@string/charge_text_volume" />

        <com.yjkj.chainup.treaty.ComTitleValueView
            android:id="@+id/cvv_deal_volume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:bottomValue="100.00000000000"
            app:bottomValueColor="@color/red"
            app:topGravity="17"
            app:bottomGravity="17"
            app:isShowTips="false"
            app:topTitle="@string/dealt_amount" />

        <com.yjkj.chainup.treaty.ComTitleValueView
            android:id="@+id/tv_remain_volume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            app:bottomValue="100.00000000000"
            app:isShowTips="false"
            app:topGravity="5"
            app:bottomGravity="5"
            app:topTitle="@string/contract_text_remaining" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/ll_first">

        <com.yjkj.chainup.treaty.ComTitleValueView
            android:id="@+id/cvv_avg_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomValue="100.00000000000"
            app:isShowTips="false"
            app:topGravity="4"
            app:bottomGravity="4"
            app:topTitle="@string/contract_text_dealAverage" />

        <com.yjkj.chainup.treaty.ComTitleValueView
            android:id="@+id/cvv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:bottomValue="100.00000000000"
            app:topGravity="17"
            app:bottomGravity="17"
            app:isShowTips="false"
            app:topTitle="@string/contract_text_price" />

        <com.yjkj.chainup.treaty.ComTitleValueView
            android:id="@+id/cvv_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            app:bottomValue="100.00000000000"
            app:isShowTips="false"
            app:topGravity="5"
            app:bottomGravity="5"
            app:topTitle="@string/value" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:background="@color/market_bottom_color"
        app:layout_constraintTop_toBottomOf="@id/ll_second"
        android:layout_marginTop="@dimen/dp_18"
        />

</android.support.constraint.ConstraintLayout>