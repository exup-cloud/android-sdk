<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.yjkj.chainup.new_version.activity.NewMainActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_50"/>


        <RadioGroup
            android:id="@+id/home_tab_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/bg_card_color"
            android:elevation="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.yjkj.chainup.new_version.view.MyRadioButton
                android:id="@+id/tab_button_homepage"
                style="@style/MainTabButtonStyle"
                android:checked="true"
                app:drawableTop="@drawable/bg_homepage_tab"
                android:text="@string/mainTab_text_home"/>

            <com.yjkj.chainup.new_version.view.MyRadioButton
                android:id="@+id/tab_button_market"
                style="@style/MainTabButtonStyle"
                app:drawableTop="@drawable/bg_market_tab"
                android:text="@string/mainTab_text_market"/>

            <com.yjkj.chainup.new_version.view.MyRadioButton
                android:id="@+id/tab_button_trade"
                style="@style/MainTabButtonStyle"
                app:drawableTop="@drawable/bg_trade_tab"
                android:text="@string/mainTab_text_transaction"/>

            <com.yjkj.chainup.new_version.view.MyRadioButton
                android:id="@+id/tab_button_otc"
                style="@style/MainTabButtonStyle"
                app:drawableTop="@drawable/bg_otc_tab"
                android:text="@string/mainTab_text_otc"/>

            <com.yjkj.chainup.new_version.view.MyRadioButton
                android:id="@+id/tab_button_contract"
                style="@style/MainTabButtonStyle"
                app:drawableTop="@drawable/bg_contract_tab"
                android:text="@string/journalAccount_text_contract"/>

            <com.yjkj.chainup.new_version.view.MyRadioButton
                android:id="@+id/tab_button_asset"
                style="@style/MainTabButtonStyle"
                app:drawableTop="@drawable/bg_asset_tab"
                android:text="@string/mainTab_text_assets"/>

        </RadioGroup>


    </android.support.constraint.ConstraintLayout>

    <!--侧边栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/bg_card_color"
        android:orientation="vertical"
        tools:showIn="navigation_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/leftCoinView">
            <!--搜索框-->
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/bg_color"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="@dimen/dp_10"
                android:hint="@string/common_action_searchCoinPair"
                android:paddingLeft="@dimen/dp_10"
                android:singleLine="true"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/sp_14" />

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tl_market"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:clickable="true"
                app:tl_indicator_color="@color/main_blue"
                app:tl_indicator_corner_radius="@dimen/dp_2"
                app:tl_indicator_height="@dimen/dp_2"
                app:tl_indicator_width="@dimen/dp_16"
                app:tl_indicator_width_equal_title="false"
                app:tl_textBold="SELECT"
                app:tl_textSelectColor="@color/text_color"
                app:tl_textUnselectColor="@color/normal_text_color"
                app:tl_textsize="@dimen/sp_14" />

            <View
                style="@style/common_horizon_line_style" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_market"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"/>
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_contract"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:visibility="gone" />

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
