<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_54"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_coin"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_8"
        android:src="@drawable/ic_default_coin" />

    <TextView
        android:id="@+id/tv_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_coin"
        android:textColor="@color/otc_screening_text"
        android:textSize="@dimen/sp_16"
        tools:text="LTC" />

    <TextView
        android:id="@+id/tv_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_coin"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_coin"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp_14"
        tools:text="/BTC" />


    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_coin_selected" />

    <View
        style="@style/common_horizon_line_style"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_alignParentBottom="true" />

</RelativeLayout>