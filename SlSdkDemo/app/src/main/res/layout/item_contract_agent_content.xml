<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">


    <TextView
        android:id="@+id/tv_agent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        tools:text="黄金合约经纪人" />

    <LinearLayout
        android:id="@+id/layout_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal">


        <com.yjkj.chainup.new_version.view.TwoLayersTextView
            android:id="@+id/tl_agent_return_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:contentView=""
            app:showGravity="LEFT"
            app:titleView="@string/coAgent_text_return" />

        <com.yjkj.chainup.new_version.view.TwoLayersTextView
            android:id="@+id/tl_agent_child_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:contentView=""
            app:showGravity="CENTER"
            app:titleView="@string/coAgent_text_level2return" />

        <com.yjkj.chainup.new_version.view.TwoLayersTextView
            android:id="@+id/tl_agent_childReturn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:contentView=""
            android:gravity="right"
            app:showGravity="RIGHT"
            app:titleView="@string/coAgent_text_childReturn" />

    </LinearLayout>

    <com.yjkj.chainup.new_version.view.TwoLayersTextView
        android:id="@+id/tl_agent_childTotal_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_scale"
        android:layout_marginTop="@dimen/dp_15"
        app:contentView=""
        app:showGravity="LEFT"
        app:titleView="@string/coAgent_text_childTotal" />


    <com.yjkj.chainup.new_version.view.TwoLayersTextView
        android:id="@+id/tl_agent_childTotalUSDT_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_scale"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_15"
        app:contentView=""
        app:showGravity="RIGHT"
        app:titleView="@string/coAgent_text_childTotalUSDT" />

    <com.yjkj.chainup.new_version.view.TwoLayersTextView
        android:id="@+id/tl_agent_yesterdayReturn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl_agent_childTotal_layout"
        android:layout_marginTop="@dimen/dp_15"
        app:contentView=""
        app:showGravity="LEFT"
        app:titleView="@string/coAgent_text_yesterdayReturn" />

    <com.yjkj.chainup.new_version.view.TwoLayersTextView
        android:id="@+id/tl_agent_byesterdayReturn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl_agent_childTotal_layout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_15"
        app:contentView=""
        app:showGravity="RIGHT"
        app:titleView="@string/coAgent_text_byesterdayReturn" />


</RelativeLayout>