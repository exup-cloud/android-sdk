<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_15"
    >

    <TextView
        android:id="@+id/tv_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1300.0093232"
        android:paddingLeft="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/tv_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        tools:text="BTC"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/tv_total_amount"
        app:layout_constraintLeft_toRightOf="@id/tv_total_amount"
        app:layout_constraintTop_toTopOf="@id/tv_total_amount" />


    <TextView
        android:id="@+id/tv_package_mount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        tools:text="共发出红包200个"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12"
        android:paddingLeft="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_total_amount" />

    <View
        android:id="@+id/v_line"
        android:layout_width="@dimen/dp_half"
        android:layout_height="@dimen/dp_50"
        android:background="@color/line_color"
        app:layout_constraintBottom_toBottomOf="@id/tv_package_mount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_coin"
        android:paddingBottom="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/tv_suc_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="@string/redpacket_sendout_invited"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/v_line"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="29人"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toRightOf="@id/tv_suc_invite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_suc_invite"
        />

    <TextView
        android:id="@+id/tv_reg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/redpacket_sendout_regist"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12"
        android:paddingRight="@dimen/dp_15"
        app:layout_constraintLeft_toRightOf="@id/tv_reg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_8"
        tools:text="共有59人领取"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12"
        android:paddingRight="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@id/tv_package_mount"
        app:layout_constraintLeft_toRightOf="@id/v_line" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:background="@color/line_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_package_mount"
        android:layout_marginTop="@dimen/dp_15"
        />

</android.support.constraint.ConstraintLayout>