<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_otc_symbol"
        style="@style/ScreeningPopup"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/common_text_coinsymbol"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12" />


    <com.yjkj.chainup.new_version.view.CustomizeEditText
        android:id="@+id/cet_otc_symbol"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:hint="@string/charge_action_searchcoin"
        android:textColor="@color/text_color"
        android:textColorHint="@color/otc_trading_money"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/new_edit_line_color" />

    <TextView
        android:id="@+id/tv_title_otc_trading_type"
        style="@style/ScreeningPopup"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/filter_fold_transactionType"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12" />

    <com.yjkj.chainup.wedegit.LineAdapter4FundsLayout
        android:id="@+id/ll_total_otc_fund_pwd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_currency"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15" />

    <TextView
        android:id="@+id/tv_title_otc_data"
        style="@style/ScreeningPopup"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/charge_text_date"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12" />

    <!--日期-->
    <com.yjkj.chainup.new_version.view.SelectDateView
        android:id="@+id/sdv_fund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"/>

</LinearLayout>