<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/ll_main_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/bg_card_color"
android:orientation="vertical"
android:paddingLeft="@dimen/dp_15"
android:paddingRight="@dimen/dp_15">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/main_blue"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        tools:text="LTC" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/tv_symbol"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_14"
        tools:text="2017-10-10 18:18" />


    <com.coorchice.library.SuperTextView
        android:id="@+id/tv_status"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center"
        android:text="归还"
        android:textColor="@color/main_blue"
        android:textSize="@dimen/sp_14"
        app:stv_solid="@color/outline_color" />

</RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_15"
    android:orientation="horizontal">

    <!--币种-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_coin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/common_text_coinsymbol"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_14"
            tools:text="36.43997703" />

    </LinearLayout>


    <!--数量-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/charge_text_volume"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_14"
            tools:text="0.10%" />

    </LinearLayout>


</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_15"
    android:orientation="horizontal">

    <!--利率-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_rate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/leverage_rate"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_14"
            tools:text="36.43997703" />

    </LinearLayout>


    <!--利息-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_interest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/leverage_interest"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_14"
            tools:text="0.10%" />

    </LinearLayout>


</LinearLayout>


<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_half"
    android:background="@color/line_color" />

</LinearLayout>