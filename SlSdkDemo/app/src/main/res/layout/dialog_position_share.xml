<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/bg_contract_share"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textColor="#FFE5D2AC"
                android:textSize="@dimen/sp_16"
                tools:text="@string/common_share_losePrompt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_contract_deposit_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="@string/contract_deposit_rate"
                    android:textColor="#FF5D5F7C"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_contract_orientation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/green"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    tools:text="做多" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_contract_profit_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="--"
                android:textColor="#FFE1C083"
                android:textSize="32sp"
                tools:text="-29.33%" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_60">
                <!--            合约类型-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_contract_type_title"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#FF5D5F7C"
                        android:textSize="@dimen/sp_12"
                        tools:text="永续合约" />

                    <TextView
                        android:id="@+id/tv_contract_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/sp_12"
                        tools:text="BTCUSDT" />
                </LinearLayout>
                <!--            合理价格-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:id="@+id/tv_contract_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/home_text_dealLatestPrice"
                        android:textColor="#FF5D5F7C"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_contract_price"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/sp_12"
                        tools:text="5249.00" />
                </LinearLayout>

                <!--            开仓均价-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_open_avg_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/contract_text_openAveragePrice"
                        android:textColor="#FF5D5F7C"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_open_avg_price"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/sp_12"
                        tools:text="5249.00" />
                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_55"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_download_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="扫码下载ChainUP APP" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/contract_share_cry" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/main_blue"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text="@string/common_share_confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

</LinearLayout>