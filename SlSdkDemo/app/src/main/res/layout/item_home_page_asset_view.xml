<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color">

    <RelativeLayout
        android:id="@+id/rl_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/page_head_height">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/home_text_assets"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_hide_asset"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:src="@drawable/visible" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        style="@style/common_horizon_line_style"
        android:layout_below="@+id/rl_top_layout" />

    <RelativeLayout
        android:id="@+id/rl_into_asset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_line">

        <TextView
            android:id="@+id/tv_total_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/assets_text_total"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/tv_total_asset"
            android:src="@drawable/icon_white_next" />


        <TextView
            android:id="@+id/tv_total_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total_asset"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_11"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold"
            tools:text="sdasdasdas" />

        <TextView
            android:id="@+id/tv_total_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total_asset"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@+id/tv_total_content"
            android:text="@string/BTC"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/tv_equivalent_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="aaaa" />

        <ImageView
            android:layout_width="131dp"
            android:layout_height="@dimen/dp_77"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@drawable/home_assetentry" />
    </RelativeLayout>
</RelativeLayout>