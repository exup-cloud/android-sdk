<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:fitsSystemWindows="true">






    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_bg_image"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:background="@drawable/banner" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/rl_directory_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_steps1_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:background="@drawable/icon1" />

                        <TextView
                            android:id="@+id/tv_setps1_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="2"
                            android:text="@string/coAgent_text_agentStepA"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_12"
                        android:layout_gravity="top"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_6"
                        android:background="@drawable/arrow" />

                    <LinearLayout
                        android:id="@+id/ll_steps2_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:background="@drawable/icon2" />

                        <TextView
                            android:id="@+id/tv_setps2_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="2"
                            android:text="@string/coAgent_text_agentStepB"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_12"
                        android:layout_gravity="top"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_6"
                        android:background="@drawable/arrow" />

                    <LinearLayout
                        android:id="@+id/ll_steps3_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_24"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:background="@drawable/icon3" />

                        <TextView
                            android:id="@+id/tv_setps3_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="2"
                            android:text="@string/coAgent_text_agentStepC"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view_contract_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:layout_below="@+id/rl_directory_layout"
                    android:layout_marginTop="@dimen/dp_18"
                    android:background="@color/bg_color" />

                <include
                    android:id="@+id/item_contract_agent_content"
                    layout="@layout/item_contract_agent_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_contract_line"
                    android:layout_marginTop="-1dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/rl_back_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/ic_return"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/tv_right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/coAgent_text_explain"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_already_login_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.yjkj.chainup.new_version.view.CommonlyUsedButton
            android:id="@+id/ctn_go_red_package"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            app:bgColor="@color/outline_color"
            app:bottonTextContent="@string/coAgent_text_redpackInvite"
            app:buttonTextColor="@color/text_color" />

        <com.yjkj.chainup.new_version.view.CommonlyUsedButton
            android:id="@+id/ctn_invite_friends"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:bottonTextContent="@string/coAgent_text_friendInvite" />


    </LinearLayout>


    <com.yjkj.chainup.new_version.view.CommonlyUsedButton
        android:id="@+id/btn_login_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_30"
        android:visibility="gone"
        app:bottonTextContent="@string/login_action_login" />


</RelativeLayout>