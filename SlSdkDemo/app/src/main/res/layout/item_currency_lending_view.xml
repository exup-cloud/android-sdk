<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_contract_text_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="@string/contract_text_type"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/type_base"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="left"
            tools:text=""
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/type_quote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="right"
            tools:text=""
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_assets_text_available"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="@string/assets_text_available"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/canUse_base"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="left"
            tools:text=""
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/canUse_quote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text=""
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_assets_text_freeze"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="@string/assets_text_freeze"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/lock_base"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            tools:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/lock_quote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            tools:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_leverage_have_borrowed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/leverage_have_borrowed"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_have_borrow_base"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="left"
            tools:text=""
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_have_borrow_quote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="right"
            tools:text=""
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_currency_equivalence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_14"
        tools:text="@string/assets_text_equivalence" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/bg_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_current_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asset_lever_current_application"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/ll_history_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:src="@drawable/exchange_order" />

            <TextView
                android:id="@+id/tv_asset_lever_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/asset_lever_history"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_half"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/new_line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>