<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/ll_main_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_12"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_20"
            android:background="@color/main_blue" />

        <TextView
            android:id="@+id/ll_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/transaction_text_mainZone"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@id/ll_main_area"
        android:orientation="horizontal"
        android:id="@+id/content_ll">

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_rose"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:stv_corner="@dimen/dp_2"
            android:text="-16.68%"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/tv_rose">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.7"
                >
                <TextView
                    android:id="@+id/tv_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="italic|bold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/dp_10"
                    android:text="11" />

                <TextView
                    android:id="@+id/tv_coin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/tv_ranking"
                    tools:text="LTC" />

                <TextView
                    android:id="@+id/tv_market_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12"
                    android:layout_toRightOf="@id/tv_coin_name"
                    tools:text="/ETH"
                    android:maxLines="1"
                    android:paddingTop="3dp"/>

                <com.yjkj.chainup.new_version.view.CustomTagView
                    android:id="@+id/ctv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/tv_market_name" />


                <!--24H交易量-->
                <TextView
                    android:id="@+id/tv_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12"
                    android:text="24H量 123457900000000000000"
                    android:layout_below="@id/tv_coin_name"
                    android:layout_toRightOf="@id/tv_ranking"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_weight="1">
                <!--收盘价
            app:layout_constraintWidth_percent="0.3"-->
                <TextView
                    android:id="@+id/tv_close_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:text="5734.580000000000000011111" />

                <!--app:layout_constraintHorizontal_bias="0.3"-->
                <TextView
                    android:id="@+id/tv_close_price_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_3"
                    android:ellipsize="end"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12"
                    android:text="¥3.14" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/item_view_market_line"
        style="@style/common_horizon_line_style"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_below="@id/content_ll" />
</RelativeLayout>