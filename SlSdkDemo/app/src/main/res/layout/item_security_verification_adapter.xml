<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_new_dialog"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_security_verification_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/login_action_fogetpwdSafety"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_security_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:text="@string/common_text_btnCancel"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_pwd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_pwd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_text_loginPwd"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14" />


        <com.yjkj.chainup.new_version.view.PwdSettingView
            android:id="@+id/pwd_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_pwd_title"
            app:hint_text="@string/register_text_loginPwd"
            app:isEditable="true"
            app:textContent="" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_mail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14" />

        <com.yjkj.chainup.new_version.view.ComVerifyView
            android:id="@+id/cv_content_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mail_title"
            android:layout_marginTop="@dimen/dp_14"
            app:verify_type="-1"
            app:verify_type_size="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_new_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_15"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_new_email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14" />

        <com.yjkj.chainup.new_version.view.ComVerifyView
            android:id="@+id/cv_content_new_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_new_email_title"
            android:layout_marginTop="@dimen/dp_15"
            app:verify_type="-1"
            app:verify_type_size="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14" />

        <com.yjkj.chainup.new_version.view.ComVerifyView
            android:id="@+id/cv_content_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_phone_title"
            android:layout_marginTop="@dimen/dp_15"
            app:verify_type="1"
            app:verify_type_size="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_google_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_google_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14" />

        <com.yjkj.chainup.new_version.view.ComVerifyView
            android:id="@+id/cv_content_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_google_title"
            android:layout_marginTop="@dimen/dp_15"
            app:verify_type_size="14sp" />
    </RelativeLayout>


    <com.yjkj.chainup.new_version.view.CustomizeEditText
        android:id="@+id/ce_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:hint="@string/new_input_nickname"
        android:maxLength="10"
        android:textColor="@color/normal_text_color"
        android:textColorHint="@color/gesture_dot_color" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/line_color" />


    <com.yjkj.chainup.new_version.view.CommonlyUsedButton
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_30"
        app:bgColor="@color/main_blue"
        app:bottonTextContent="@string/common_action_next" />

</LinearLayout>