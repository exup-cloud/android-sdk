<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:fitsSystemWindows="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yjkj.chainup.new_version.view.PersonalCenterView
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            app:personalTitle="@string/safety_action_googleBind"
            app:showRightIc="false" />

        <com.yjkj.chainup.new_version.view.CommonlyUsedButton
            android:id="@+id/cub_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_30"
            app:bottonTextContent="@string/common_action_next" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/cub_next"
            android:layout_below="@+id/title_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_one_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_19"
                    android:text="1."
                    android:textColor="@color/normal_text_color"
                    android:textSize="14sp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/tv_one_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_toRightOf="@+id/tv_one_num"
                    android:text="@string/register_text_googleAuth"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <com.yjkj.chainup.new_version.view.CommonlyUsedButton
                    android:id="@+id/cub_download"
                    android:layout_width="72dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_15"
                    app:bottonTextContent="@string/safety_action_downloadgoogle"
                    app:textSize="14sp" />


                <View
                    android:id="@+id/one_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_half"
                    android:layout_below="@+id/tv_one_title"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="26dp"
                    android:background="@color/new_line" />

                <TextView
                    android:id="@+id/tv_two_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/one_line"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_19"
                    android:text="2."
                    android:textColor="@color/normal_text_color"
                    android:textSize="14sp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/tv_two_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/one_line"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@+id/tv_two_num"
                    android:text="@string/safety_explain_googleauthStepOne"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/rl_two_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_below="@+id/tv_two_title"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/bg_bind_google">

                    <TextView
                        android:id="@+id/tv_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="@string/common_action_copy"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_google_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toLeftOf="@+id/tv_copy"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_14"
                        tools:text="sadasdasdasdasd" />

                </RelativeLayout>

                <View
                    android:id="@+id/two_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_half"
                    android:layout_below="@+id/rl_two_layout"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="26dp"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/tv_three_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/two_line"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_19"
                    android:text="3."
                    android:textColor="@color/normal_text_color"
                    android:textSize="14sp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/tv_three_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/two_line"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@+id/tv_three_num"
                    android:text="@string/safety_explain_googleauthStepTwo"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_login_pwd_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_three_title"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/register_text_loginPwd"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />


                <com.yjkj.chainup.new_version.view.PwdSettingView
                    android:id="@+id/pwd_login_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tv_login_pwd_title"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginRight="@dimen/dp_15"
                    app:hint_text="@string/register_text_loginPwd"
                    app:textContent=""
                    app:textContentSize="14sp" />

                <TextView
                    android:id="@+id/tv_google_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pwd_login_pwd"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/safety_text_googleAuth"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />

                <com.yjkj.chainup.new_version.view.ComVerifyView
                    android:id="@+id/cet_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_google_title"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_30"
                    app:verify_type="0"
                    app:verify_type_size="14sp"/>


            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>