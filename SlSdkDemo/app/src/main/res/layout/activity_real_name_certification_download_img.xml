<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/v_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yjkj.chainup.new_version.view.PersonalCenterView
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:personalTitle="@string/title_verify" />

        <TextView
            android:id="@+id/tv_common_action_uploadFrontView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/common_action_uploadFrontView"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="140dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_frist"
                android:layout_width="240dp"
                android:layout_height="140dp"
                android:src="@drawable/personal_positiveupload" />

            <ImageView
                android:id="@+id/iv_frist_close"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_alignParentRight="true"
                android:background="@drawable/personal_delete_certification"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_common_action_uploadBackView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/common_action_uploadBackView"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="140dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_second"
                android:layout_width="240dp"
                android:layout_height="140dp"
                android:src="@drawable/personal_uploadreverse" />

            <ImageView
                android:id="@+id/iv_second_close"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_alignParentRight="true"
                android:background="@drawable/personal_delete_certification"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_common_action_uplodadIdInHand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/common_action_uplodadIdInHand"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="140dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_third"
                android:layout_width="240dp"
                android:layout_height="140dp"
                android:src="@drawable/personal_handhelddocuments" />

            <ImageView
                android:id="@+id/iv_third_close"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_alignParentRight="true"
                android:background="@drawable/personal_delete_certification"
                android:visibility="gone" />
        </RelativeLayout>


        <com.yjkj.chainup.new_version.view.CommonlyUsedButton
            android:id="@+id/cub_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15"
            app:bottonTextContent="@string/common_action_next" />

        <TextView
            android:id="@+id/tv_common_tip_uploadImgRequire"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/common_tip_uploadImgRequire"
            android:textColor="@color/otc_trading_money"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_kyc_explain_photoTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:lineSpacingExtra="6dp"
            android:text="@string/kyc_explain_photoTip"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_4_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:lineSpacingExtra="6dp"
            android:text="@string/kyc_explain_lastTip"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>