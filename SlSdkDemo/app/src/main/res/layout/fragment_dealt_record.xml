<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.yjkj.chainup.new_version.fragment.DealtRecordFragment">

    <!--成交记录-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_8"
        >
        <!--时间-->
        <TextView
            android:id="@+id/tv_time_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="@string/kline_text_dealTime"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_12" />

        <!--价格-->
        <TextView
            android:id="@+id/tv_price_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/contract_text_price"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_12" />

        <!--数量-->
        <TextView
            android:id="@+id/tv_amount_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="@string/charge_text_volume"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_12"
            android:layout_marginRight="@dimen/dp_15"
            />


        <!--方向-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/orientation"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />

    </LinearLayout>
    <!--最新成交的列表-->
    <LinearLayout
        android:id="@+id/ll_dealt_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        />
</LinearLayout>
