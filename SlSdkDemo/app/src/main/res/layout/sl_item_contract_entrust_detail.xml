<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    android:orientation="vertical">




    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_deal_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_deal_time"
            android:textColor="@color/normal_text_color"
            android:textSize="12sp" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_deal_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="--"
            tools:text="2019/01/16 15:00:23"
            android:textColor="@color/text_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_item_deal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_deal_price"
            android:textColor="@color/normal_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_deal_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="--"
            tools:text="653212"
            android:textColor="@color/text_color"
            android:textSize="14sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_item_volume_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_make_volume_unit"
            android:textColor="@color/normal_text_color"
            android:textSize="12sp"
            tools:text="成交数量 (张)" />

        <TextView
            android:id="@+id/tv_item_volume_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="--"
            tools:text="4632"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_item_deal_avg_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_deal_money"
            tools:text="成交金额"
            android:textColor="@color/normal_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_deal_avg_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="--"
            tools:text="402453"
            android:textColor="@color/text_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_item_fee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_fee"
            android:textColor="@color/normal_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_fee_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="--"
            tools:text="46326.4236"
            android:textColor="@color/text_color"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>