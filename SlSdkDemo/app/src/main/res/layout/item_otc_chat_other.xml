<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_otc_chat_other_url"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_otc_header"
        android:gravity="center"
        android:text=""
        android:textColor="@color/bg_card_color"
        android:textSize="@dimen/sp_16"
        android:tint="@color/gesture_dot_color" />

    <RelativeLayout
        android:id="@+id/item_otc_chat_other_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_64"
        android:layout_toRightOf="@+id/item_otc_chat_other_url">

        <TextView
            android:id="@+id/item_otc_chat_other_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_otc_im_other"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text=""
            android:textColor="@color/bg_card_color"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/item_otc_chat_other_image"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_otc_chat_other_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_otc_chat_other_content_layout"
        android:layout_alignEnd="@+id/item_otc_chat_other_content_layout"
        android:layout_marginTop="@dimen/dp_6"
        android:text=""
        android:textColor="#C3C5C8"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"/>

</RelativeLayout>