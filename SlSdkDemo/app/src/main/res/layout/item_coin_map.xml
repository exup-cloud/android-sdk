<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:paddingLeft="@dimen/dp_15">
    <!--币种图标-->
    <ImageView
        android:id="@+id/iv_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_8"
        android:src="@drawable/ic_default_coin"
        android:visibility="gone" />
    <!--币种-->
    <TextView
        android:id="@+id/tv_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_coin"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_14"
        tools:text="LTC" />
    <!--市场-->
    <TextView
        android:id="@+id/tv_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_coin"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_coin"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_14"
        tools:text="/BTC" />

    <!--添加币对-->
    <!--android:background="@drawable/bg_msg_focus"-->

    <ImageView
        android:id="@+id/ib_add"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:padding="@dimen/dp_15"
        android:src="@drawable/quotes_optional_default" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_alignParentBottom="true"
        android:background="@color/line_color"
        android:visibility="gone" />

</RelativeLayout>