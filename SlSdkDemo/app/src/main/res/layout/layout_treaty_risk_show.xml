<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >

    <com.coorchice.library.SuperTextView
        android:id="@+id/tv_risk_1st"
        android:layout_width="@dimen/dp_6"
        android:layout_height="@dimen/dp_10"
        android:layout_weight="1"
        android:gravity="center"
        app:stv_solid="@color/outline_color"
        android:layout_marginLeft="@dimen/dp_2"
        />
    <!--new_text_color-->
    <com.coorchice.library.SuperTextView
        android:id="@+id/tv_risk_2nd"
        android:layout_width="@dimen/dp_6"
        android:layout_height="@dimen/dp_10"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_2"
        app:stv_solid="@color/outline_color"
        />

    <com.coorchice.library.SuperTextView
        android:id="@+id/tv_risk_3rd"
        android:layout_width="@dimen/dp_6"
        android:layout_height="@dimen/dp_10"
        android:layout_weight="1"
        android:gravity="center"
        app:stv_solid="@color/outline_color"
        android:layout_marginLeft="@dimen/dp_2"
        />

    <com.coorchice.library.SuperTextView
        android:id="@+id/tv_risk_4th"
        android:layout_width="@dimen/dp_6"
        android:layout_height="@dimen/dp_10"
        android:layout_weight="1"
        android:gravity="center"
        app:stv_solid="@color/outline_color"
        android:layout_marginLeft="@dimen/dp_2"
        />

    <com.coorchice.library.SuperTextView
        android:id="@+id/tv_risk_5th"
        android:layout_width="@dimen/dp_6"
        android:layout_height="@dimen/dp_10"
        android:layout_weight="1"
        android:gravity="center"
        app:stv_solid="@color/outline_color"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_2"
        />

    <ImageView
        android:id="@+id/iv_new_flag"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:src="@drawable/assets_prompt"
        />
</LinearLayout>