<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12"
        tools:text="11111" />

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_toRightOf="@+id/tv_top_title"
        android:src="@drawable/ic_credit_otc"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_bottom_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_top_title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_14"
        tools:text="asdassssss" />

    <ImageView
        android:id="@+id/iv_bottom"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_12"
        android:layout_below="@+id/tv_top_title"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_toRightOf="@+id/tv_bottom_content"
        android:src="@drawable/fiat_copy"
        android:visibility="gone" />

</RelativeLayout>