<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tv_payment_icon"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15" />

    <TextView
        android:id="@+id/tv_payment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@+id/tv_payment_icon"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_14"
        tools:text="dasda" />

    <CheckBox
        android:id="@+id/cb_layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:button="@drawable/new_hide_small_symbol"
        android:paddingLeft="@dimen/dp_5"
        android:text="@string/payMethod_text_active"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_14" />


    <TextView
        android:id="@+id/tv_editor_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_layer"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:padding="@dimen/dp_10"
        android:text="@string/b2c_text_edit"
        android:textColor="@color/main_blue"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_real_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_payment_icon"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="20dp"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_14"
        tools:text="dasda" />

    <TextView
        android:id="@+id/tv_account_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_real_name"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_14"
        tools:text="dasda" />

    <View
        android:id="@+id/v_line"
        style="@style/common_horizon_line_style"
        android:layout_below="@+id/tv_account_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15" />

</RelativeLayout>