<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_54">

    <com.coorchice.library.SuperTextView
        android:id="@+id/tv_rose"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_35"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/main_blue"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:stv_corner="1.5dp"
        app:stv_solid="@color/tabbar_color"
        tools:text="-16.68%" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toLeftOf="@id/tv_rose"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_frist_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6.0">

            <TextView
                android:id="@+id/tv_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/green"
                android:textSize="@dimen/sp_14"
                android:textStyle="italic|bold"
                tools:text="11" />


            <TextView
                android:id="@+id/tv_coin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_ranking"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="NTC" />

            <com.yjkj.chainup.new_version.view.CustomTagView
                android:id="@+id/ctv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@+id/tv_coin_name" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_close_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5.0"
            android:maxLines="1"
            android:text="0.0229"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>