<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <com.yjkj.chainup.new_version.view.PersonalCenterView
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:personalTitle="@string/sl_str_contract_settings" />
    <!--仓位展示单位-->
    <RelativeLayout
        android:id="@+id/rl_display_unit_layout"
        android:background="@color/bg_card_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sl_item_height">
        <TextView
            android:id="@+id/tv_contracts_unit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_display_unit"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            style="@style/right_arrow_img_style"
            android:layout_marginRight="@dimen/dp_15"/>

        <TextView
            android:layout_marginRight="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_contracts_unit_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/sl_str_contracts_unit"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            />
        <View
            style="@style/common_horizon_line_style"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <!--未实现盈亏计算-->
    <RelativeLayout
        android:id="@+id/rl_pnl_calculator_layout"
        android:background="@color/bg_card_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sl_item_height">
        <TextView
            android:id="@+id/tv_pnl_calculator_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_pnl_calculator"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            style="@style/right_arrow_img_style"
            android:layout_marginRight="@dimen/dp_15"/>

        <TextView
            android:layout_marginRight="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_pnl_calculator_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/sl_str_fair_price"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            />
        <View
            style="@style/common_horizon_line_style"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <!--下单二次确认-->
    <RelativeLayout
        android:background="@color/bg_card_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sl_item_height">
        <TextView
            android:id="@+id/tv_book_confirm_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_book_confirm"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            />


        <Switch
            android:id="@+id/switch_book_again"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_18"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shut_down"
            android:thumb="@drawable/icon_switch_default"
            android:track="@drawable/icon_switch_default"  />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_plan_settings_label"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="@string/sl_str_plan_settings"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12"
        />
    <!--有效时间-->
    <RelativeLayout
        android:id="@+id/rl_effective_time_layout"
        android:background="@color/bg_card_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sl_item_height">
        <TextView
            android:id="@+id/tv_effective_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_strategy_effective_time"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            style="@style/right_arrow_img_style"
            android:layout_marginRight="@dimen/dp_15"/>

        <TextView
            android:layout_marginRight="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_effective_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/sl_str_in_24_hours"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            />
        <View
            android:visibility="gone"
            style="@style/common_horizon_line_style"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <!--触发类型-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_trigger_type_layout"
        android:background="@color/bg_card_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sl_item_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_trigger_type"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            style="@style/right_arrow_img_style"
            android:layout_marginRight="@dimen/dp_15"/>

        <TextView
            android:layout_marginRight="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_trigger_type_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/sl_str_latest_price"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            />
    </RelativeLayout>

</LinearLayout>