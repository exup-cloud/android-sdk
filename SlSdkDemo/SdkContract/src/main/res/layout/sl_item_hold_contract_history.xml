<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/sl_colorDefault">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sl_defaultLine"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:background="@color/sl_colorDefault"
        >

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="@string/sl_str_buy_open"
            android:textColor="@color/sl_colorGreen"
            android:textSize="13sp"
            android:background="@drawable/sl_border_green"/>

        <TextView
            android:id="@+id/tv_contract_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_type"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:text="--"
            android:textColor="@color/sl_colorWhite"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_open_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="--"
            android:textColor="@color/sl_colorWhite"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:background="@color/sl_colorDefault"
        >

        <TextView
            android:id="@+id/tv_open_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_open_price2"
            android:textColor="@color/sl_grayText"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_open_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_open_price"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:text="--"
            android:textColor="@color/sl_colorWhite"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_gains_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="--"
            android:textColor="@color/sl_colorWhite"
            android:textSize="14sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_gains"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_gains_value"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_gains"
            android:textColor="@color/sl_grayText"
            android:textSize="14sp"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:background="@color/sl_colorDefault"
        >

        <TextView
            android:id="@+id/tv_gains_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_gains_balance"
            android:textColor="@color/sl_grayText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_gains_balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="--"
            android:textColor="@color/sl_colorWhite"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/sl_defaultLine"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:background="@color/sl_colorDefault"
        >

        <TextView
            android:id="@+id/tv_amount_liquidated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_amount_liquidated"
            android:textColor="@color/sl_grayText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_amount_liquidated_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="--"
            android:textColor="@color/sl_colorWhite"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:background="@color/sl_colorDefault"
        >

        <TextView
            android:id="@+id/tv_tag_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_tag_price"
            android:textColor="@color/sl_grayText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_tag_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="--"
            android:textColor="@color/sl_colorWhite"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:background="@color/sl_colorDefault"
        >

        <TextView
            android:id="@+id/tv_forced_close_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_close_price"
            android:textColor="@color/sl_grayText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_forced_close_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="--"
            android:textColor="@color/sl_colorWhite"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:background="@color/sl_colorDefault"
        >

        <TextView
            android:id="@+id/tv_margins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/sl_str_margins"
            android:textColor="@color/sl_grayText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_margins_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="--"
            android:textColor="@color/sl_colorWhite"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/sl_defaultLine"/>
</LinearLayout>